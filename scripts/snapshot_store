#!/usr/bin/env bash -e

if [ -z "$mode" ]; then
	mode="all"
fi

# Ensure this sucker is gone
rm -rf /tmp/temp.pak
echo "Running sspak save with mode '${mode}'"
sspak save $webroot /tmp/temp.pak --${mode}


echo "Saving snapshot"
aws s3 --only-show-errors cp /tmp/temp.pak s3://${bucket}/${bucket-folder}/temp.pak

echo "Cleaning up"
rm -rf /tmp/temp.pak
echo "sspak_url=s3://${bucket}/${bucket-folder}/temp.pak"